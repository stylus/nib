
/*
 * Vendor "display: box" support.
 */

display(type)
  if box == type
    display: vendor-value(type)
  else 
    display: type
    if  inline-block == type and support-for-ie
      zoom: 1
      *display: inline

/*
 * Synopsis:
 *
 *   box: <orient> [direction]
 *
 * Examples:
 *
 *     box: horizontal
 *     box: horizontal reverse
 *
 */

box(args...)
  display: box
  box-orient: args[0]
  if args[1]
    box-direction: args[1]
