
/*
 * Vendor "display: box" support.
 */

display(type)
  if box == type
    display: vendor-value(type)
  else if  inline-block == type
  	display:-moz-inline-stack
   	display: vendor-value(type)
  	if support-for-ie
  		*display:inline
  		*zoom:1
  else
    display: type

/*
 * Synopsis:
 *
 *   box: <orient> [direction]
 *
 * Examples:
 *
 *     box: horizontal
 *     box: horizontal reverse
 *
 */

box(args...)
  display: box
  box-orient: args[0]
  if args[1]
    box-direction: args[1]
